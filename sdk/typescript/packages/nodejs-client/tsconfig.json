{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2021", "webworker"],
    "outDir": "./dist/",
    "module": "esnext",
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules", "dist", "**/dist", "scripts"]
}
