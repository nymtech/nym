{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "typeRoots": ["./types/global.d.ts"]
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },

  "exclude": ["dist", "examples", "tests", "node_module", "types"]
}
